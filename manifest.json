{
  "manifest_version": 3,
  "name": "Image Magnifier",
  "version": "1.0",
  "description": "Adds a magnifier icon to images and shows image information in a popup",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 